@model IEnumerable<LibrarySystem.Models.User>

<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Profile", "User", new { id = user.UserId })">View Profile</a> |
                    <a href="@Url.Action("Delete", "User", new { id = user.UserId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
