@model LibrarySystem.Models.Review

<h2>Add Review</h2>

<form asp-action="Add" method="post">
    <input type="hidden" name="BookId" value="@ViewBag.BookId" />

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

   

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>

<a href="/Review/Index?bookId=@ViewBag.BookId">Back to Reviews</a>
